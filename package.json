{
  "name": "leek-fund",
  "displayName": "韭菜盒子",
  "description": "韭菜盒子，VSCode 里也可以看股票 & 基金实时数据，做最好用的养基插件",
  "version": "1.2.8",
  "author": "giscafer <giscafer@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/giscafer/leek-fund.git"
  },
  "license": "MIT",
  "keywords": [
    "stock",
    "股票",
    "fund",
    "基金",
    "韭菜基金",
    "韭菜盒子",
    "同花顺",
    "天天基金",
    "蚂蚁财富",
    "vscode"
  ],
  "publisher": "giscafer",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leekFundMenu",
          "title": "LeetFund 🐥🐥🐥",
          "icon": "resources/fund.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "leekFundMenu",
        "contents": "无数据，请点击添加"
      }
    ],
    "views": {
      "leekFundMenu": [
        {
          "id": "views.fund",
          "name": "Fund"
        },
        {
          "id": "views.stock",
          "name": "Stock"
        }
      ]
    },
    "commands": [
      {
        "command": "leekfund.fundflow",
        "title": "资金流向",
        "icon": {
          "light": "resources/light/fundflow.svg",
          "dark": "resources/dark/fundflow.svg"
        }
      },
      {
        "command": "fund.rank",
        "title": "基金排行榜",
        "icon": {
          "light": "resources/light/rank.svg",
          "dark": "resources/dark/rank.svg"
        }
      },
      {
        "command": "fund.trend",
        "title": "基金走势一览",
        "icon": {
          "light": "resources/light/trend.svg",
          "dark": "resources/dark/trend.svg"
        }
      },
      {
        "command": "fund.sort",
        "title": "升序/降序/不排序",
        "icon": {
          "light": "resources/light/sort.svg",
          "dark": "resources/dark/sort.svg"
        }
      },
      {
        "command": "fund.add",
        "title": "添加基金",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "fund.delete",
        "title": "删除基金"
      },
      {
        "command": "fund.history",
        "title": "持仓信息&历史净值列表"
      },
      {
        "command": "fund.refresh",
        "title": "刷新数据",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "stock.sort",
        "title": "升序/降序/不排序",
        "icon": {
          "light": "resources/light/sort.svg",
          "dark": "resources/dark/sort.svg"
        }
      },
      {
        "command": "stock.add",
        "title": "添加股票",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "stock.refresh",
        "title": "刷新数据",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "stock.delete",
        "title": "删除股票"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "leekfund.fundflow",
          "when": "view == views.stock",
          "group": "navigation@0"
        },
        {
          "command": "fund.trend",
          "when": "view == views.fund",
          "group": "navigation"
        },
        {
          "command": "fund.rank",
          "when": "view == views.fund",
          "group": "navigation"
        },
        {
          "command": "fund.refresh",
          "when": "view == views.fund",
          "group": "navigation"
        },
        {
          "command": "fund.sort",
          "when": "view == views.fund",
          "group": "navigation"
        },
        {
          "command": "fund.add",
          "when": "view == views.fund",
          "group": "navigation"
        },
        {
          "command": "stock.refresh",
          "when": "view == views.stock",
          "group": "navigation"
        },
        {
          "command": "stock.sort",
          "when": "view == views.stock",
          "group": "navigation"
        },
        {
          "command": "stock.add",
          "when": "view == views.stock",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "fund.history",
          "when": "view == views.fund",
          "group": "fundHistoryGroup"
        },
        {
          "command": "fund.delete",
          "when": "view == views.fund",
          "group": "fundDelGroup"
        },
        {
          "command": "stock.delete",
          "when": "view == views.stock"
        }
      ]
    },
    "configuration": {
      "properties": {
        "leek-fund.stocks": {
          "type": "array",
          "default": [
            "sh000001",
            "sh000300",
            "sh000016",
            "sh000688",
            "sh000913",
            "sh000905",
            "hk03690",
            "hk00700",
            "hk09988",
            "gb_ixic",
            "gb_dji",
            "gb_inx"
          ],
          "description": "配置需要监控的股票代码"
        },
        "leek-fund.funds": {
          "type": "array",
          "default": [
            "001632",
            "420009",
            "320007",
            "003096",
            "001102",
            "003885",
            "001071",
            "005963",
            "005223",
            "002316",
            "161726",
            "161028",
            "161725"
          ],
          "description": "配置需要监控的基金代码"
        },
        "leek-fund.interval": {
          "type": "number",
          "default": 5000,
          "description": "配置轮询请求最新数据的时间间隔，单位：毫秒（最小轮询间隔是3秒）"
        },
        "leek-fund.riseColor": {
          "type": "string",
          "default": "white",
          "description": "股票涨的颜色"
        },
        "leek-fund.fallColor": {
          "type": "string",
          "default": "green",
          "description": "股票跌的颜色"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "1.41.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "iconv-lite": "^0.6.2"
  }
}
